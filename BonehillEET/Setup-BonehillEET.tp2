VERSION ~v30 EET~

AUTO_TRA ~BonehillEET/Language/%s/D~

ALWAYS
  ACTION_DEFINE_ARRAY va#reload BEGIN setup END

  LAF HANDLE_CHARSETS 
    INT_VAR
      infer_charsets = 1
    STR_VAR
      tra_path = EVAL ~%MOD_FOLDER%/Language~
      reload_array = va#reload
  END
END

